{% trans_default_domain 'FOSUserBundle' %}


    <!-- Password recovery -->
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        <div class="panel panel-body login-form">
            <div class="text-center">
                <div class="icon-object border-warning text-warning"><i class="icon-spinner11"></i></div>
                <h5 class="content-group">Récupération de mot de passe</h5>
            </div>

            <div class="form-group has-feedback">
                <input class="form-control" type="text" id="username" name="username" required="required" placeholder="{{ 'resetting.request.username'|trans }}">
                <div class="form-control-feedback">
                    <i class="icon-mail5 text-muted"></i>
                </div>
            </div>

            <button type="submit" class="btn bg-blue btn-block">{{ 'resetting.request.submit'|trans }} <i class="icon-arrow-right14 position-right"></i></button>
        </div>
    </form>
    <!-- /password recovery -->

