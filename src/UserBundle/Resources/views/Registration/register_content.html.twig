{% trans_default_domain 'FOSUserBundle' %}

<!-- Registration form -->
{{ form_start(form, {'method': 'post', 'attr': {'class': 'fos_user_registration_register'}}) }}
<div class="row">
    <div class="col-lg-4 col-lg-offset-4">
        <div class="panel registration-form">
            <div class="panel-body">
                <div class="text-center">
                    <div class="icon-object border-success text-success"><i class="icon-plus3"></i></div>
                    <h4 class="content-group-lg">Créer un compte
                        <small class="display-block">Tous les champs sont requis</small>
                    </h4>
                </div>
                {#{{ form_widget(form) }}#}

                <div class="form-group has-feedback">
                    {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder':'form.username'} }) }}
                    <div class="form-control-feedback">
                        <i class="icon-user-plus text-muted"></i>
                    </div>
                    {% for errorItem in form.username.vars.errors %}
                        <div class="has-error">
                            <span class="help-block">{{ errorItem.message }}</span>
                        </div>
                    {% endfor %}
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group has-feedback">
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder':'form.email'} }) }}
                            <div class="form-control-feedback">
                                <i class="icon-mention text-muted"></i>
                            </div>
                            {% for errorItem in form.email.vars.errors %}
                                <div class="has-error">
                                    <span class="help-block">{{ errorItem.message }}</span>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group has-feedback">
                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder':'form.password'} }) }}
                            <div class="form-control-feedback">
                                <i class="icon-user-lock text-muted"></i>
                            </div>
                            {% for errorItem in form.plainPassword.first.vars.errors %}
                                <div class="has-error">
                                    <span class="help-block">{{ errorItem.message }}</span>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group has-feedback">
                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder':'form.password_confirmation'} }) }}
                            <div class="form-control-feedback">
                                <i class="icon-user-lock text-muted"></i>
                            </div>
                            {% for errorItem in form.plainPassword.second.vars.errors %}
                                <div class="has-error">
                                    <span class="help-block">{{ errorItem.message }}</span>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" class="styled" checked="checked">
                            Abonnez-vous à la newsletter
                        </label>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" class="styled" required>
                            Acceptez <a href="#">conditions d'utilisation</a>
                        </label>
                    </div>
                </div>

                <div class="text-right">
                    <a href="{{ path('fos_user_security_login') }}" class="btn btn-link"><i
                                class="icon-arrow-left13 position-left"></i> Retour au formulaire de
                        connexion</a>
                    <button type="submit" class="btn bg-teal-400 btn-labeled btn-labeled-right ml-10"><b><i
                                    class="icon-plus3"></i></b>{{ 'registration.submit'|trans }}</button>

                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
<!-- /registration form -->
