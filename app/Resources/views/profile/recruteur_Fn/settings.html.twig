{% trans_default_domain 'AppTranslat' %}

<!-- Profile info -->
<div class="panel panel-flat">
    <div class="panel-heading">
        <h6 class="panel-title">{{ 'recruteur.setting.panel-info.title'|trans }}</h6>
        <div class="heading-elements">
            <ul class="icons-list">
                <li><a data-action="collapse"></a></li>
                <li><a data-action="reload"></a></li>
                <li><a data-action="close"></a></li>
            </ul>
        </div>
    </div>

    <div class="panel-body">
        <form action="#">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label>{{ 'recruteur.setting.panel-info.username'|trans }}</label>
                        <input type="text" value="{{ user.username }}" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label>{{ 'recruteur.setting.panel-info.name'|trans }}</label>
                        <input type="text" value="{{ user.name }}" class="form-control">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label>{{ 'recruteur.setting.panel-info.address1'|trans }}</label>
                        <input type="text" value="{{ user.address1 }}" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label>{{ 'recruteur.setting.panel-info.address2'|trans }}</label>
                        <input type="text" value="{{ user.address2 }}" class="form-control">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <label>{{ 'recruteur.setting.panel-info.city'|trans }}</label>
                        <input type="text" value="{{ user.city }}" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label>{{ 'recruteur.setting.panel-info.state'|trans }}</label>
                        <input type="text" value="{{ user.state }}" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label>{{ 'recruteur.setting.panel-info.zip-code'|trans }}</label>
                        <input type="text" value="{{ user.zipcode }}" class="form-control">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label>{{ 'recruteur.setting.panel-info.email'|trans }}</label>
                        <input type="text" readonly="readonly" value="{{ user.email }}" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label>{{ 'recruteur.setting.panel-info.country'|trans }}</label>
                        <select class="select">
                            <option value="germany" selected="selected">Tunisia</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label>{{ 'recruteur.setting.panel-info.phone'|trans }} #</label>
                        <input type="text" value="{{ user.phone }}"
                               class="form-control">
                        <span class="help-block">+99-99-9999-9999</span>
                    </div>

                    <div class="col-md-6">
                        <label class="display-block">{{ 'recruteur.setting.panel-info.image'|trans }}</label>
                        <input type="file" class="file-styled">
                        <span class="help-block">{{ 'recruteur.setting.panel-info.image-desc'|trans }}</span>
                    </div>
                </div>
            </div>

            <div class="text-right">
                <button type="submit" class="btn btn-primary">{{ 'recruteur.setting.panel-info.submit'|trans }}
                    <i class="icon-arrow-right14 position-right"></i></button>
            </div>
        </form>
    </div>
</div>
<!-- /profile info -->


<!-- Account settings -->
<div class="panel panel-flat">
    <div class="panel-heading">
        <h6 class="panel-title">{{ 'recruteur.setting.panel-settings.title'|trans }}</h6>
        <div class="heading-elements">
            <ul class="icons-list">
                <li><a data-action="collapse"></a></li>
                <li><a data-action="reload"></a></li>
                <li><a data-action="close"></a></li>
            </ul>
        </div>
    </div>

    <div class="panel-body">
        {{ render(controller('UserBundle:ChangePassword:changePassword')) }}
    </div>
</div>
<!-- /account settings -->