{% trans_default_domain 'AppTranslat' %}
{{ form_start(form, { 'action': path('fos_user_profile_edit') }) }}
<div class="form-group">
    <div class="row">
        <div class="col-md-6">
            <label>{{ 'recruteur.setting.panel-info.username'|trans }}</label>
            <input type="text" value="{{ user.username }}" readonly="readonly" class="form-control">
        </div>
        <div class="col-md-6">
            <label>{{ 'recruteur.setting.panel-info.name'|trans }}</label>
            {{ form_widget(form.name,{'attr': {'class': 'form-control', 'value': user.name }}) }}
        </div>
    </div>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-md-6">
            <label>{{ 'recruteur.setting.panel-info.address1'|trans }}</label>
            {{ form_widget(form.address1,{'attr': {'class': 'form-control', 'value': user.address1 }}) }}
        </div>
        <div class="col-md-6">
            <label>{{ 'recruteur.setting.panel-info.address2'|trans }}</label>
            {{ form_widget(form.address2,{'attr': {'class': 'form-control', 'value': user.address2 }}) }}
        </div>
    </div>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-md-4">
            <label>{{ 'recruteur.setting.panel-info.city'|trans }}</label>
            {{ form_widget(form.city,{'attr': {'class': 'form-control', 'value': user.city }}) }}
        </div>
        <div class="col-md-4">
            <label>{{ 'recruteur.setting.panel-info.state'|trans }}</label>
            {{ form_widget(form.state,{'attr': {'class': 'form-control', 'value': user.state }}) }}
        </div>
        <div class="col-md-4">
            <label>{{ 'recruteur.setting.panel-info.zip-code'|trans }}</label>
            {{ form_widget(form.zipcode,{'attr': {'class': 'form-control', 'value': user.zipcode }}) }}
        </div>
    </div>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-md-6">
            <label>{{ 'recruteur.setting.panel-info.email'|trans }}</label>
            <input type="text" readonly="readonly" value="{{ user.email }}" class="form-control">
        </div>
        <div class="col-md-6">
            <label>{{ 'recruteur.setting.panel-info.country'|trans }}</label>
            <select class="select">
                <option value="germany" selected="selected">Tunisia</option>
            </select>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-md-6">
            <label>{{ 'recruteur.setting.panel-info.phone'|trans }} #</label>
            {{ form_widget(form.phone,{'attr': {'class': 'form-control', 'value': user.phone }}) }}
            <span class="help-block">+99-99-9999-9999</span>
        </div>

        <div class="col-md-6">
            <label class="display-block">{{ 'recruteur.setting.panel-info.image'|trans }}</label>
            {{ form_widget(form.image) }}
            <span class="help-block">{{ 'recruteur.setting.panel-info.image-desc'|trans }}</span>
        </div>
    </div>
</div>

<div class="text-right">
    <button type="submit" class="btn btn-primary">{{ 'recruteur.setting.panel-info.submit'|trans }}
        <i class="icon-arrow-right14 position-right"></i></button>
</div>
{{ form_end(form) }}