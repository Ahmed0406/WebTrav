{% extends 'base.html.twig' %}
{% trans_default_domain 'AppTranslat' %}
{% block body_class 'sidebar-xs has-detached-left' %}
{% block body %}
    <!-- Content area -->
    <div class="content">

        <!-- Detached sidebar -->
        <div class="sidebar-detached">
            <div class="sidebar sidebar-default sidebar-separate">
                <div class="sidebar-content">

                    <!-- User details -->
                    <div class="content-group">
                        <div class="panel-body bg-info-700 border-radius-top text-center">
                            <div class="content-group-sm">
                                <h6 class="text-semibold no-margin-bottom">
                                    {{ user.username }}
                                </h6>

                                <span class="display-block">Tunisia, Mahdia</span>
                            </div>

                            <a href="#" class="display-inline-block content-group-sm">
                                {% if not vich_uploader_asset(user.image, 'imageFile')  %}
                                <img src="{{ asset('images/man.png')}}" class="img-circle img-responsive"
                                     alt="" style="width: 150px;">
                                {% else %}
                                    <img src="{{ vich_uploader_asset(user.image, 'imageFile') }}" class="img-circle img-responsive"
                                         alt="" style="width: 110px; height: 110px;">
                                {% endif %}
                            </a>

                            <ul class="list-inline list-inline-condensed no-margin-bottom">
                                <li>
                                    <a href="#" class="btn bg-green btn-rounded btn-icon"><i
                                                class="icon-facebook2"></i></a>
                                </li>
                                <li>
                                    <a href="#" class="btn bg-green btn-rounded btn-icon"><i
                                                class="icon-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="#" class="btn bg-green btn-rounded btn-icon"><i
                                                class="icon-github"></i></a>
                                </li>
                            </ul>
                        </div>

                        <div class="panel no-border-top no-border-radius-top">
                            <ul class="navigation">
                                <li class="navigation-header"></li>
                                <li><a href="#apropos" data-toggle="tab"><i class="icon-info3"></i>
                                        Apropos</a>
                                </li>

                                <li><a href="#messages" data-toggle="tab"><i class="icon-envelop"></i>
                                        Message <span class="badge bg-warning-400">23</span></a>
                                </li>

                                <li class="active"><a href="#settings" data-toggle="tab"><i class="icon-cog"></i>
                                        Param√®tre</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /user details -->


                    <!-- Online users -->
                    <div class="sidebar-category">
                        <div class="category-title">
                            <span>Suggestion Candidat</span>
                            <ul class="icons-list">
                                <li><a href="#" data-action="collapse"></a></li>
                            </ul>
                        </div>

                        <div class="category-content">
                            <ul class="media-list">
                                <li class="media">
                                    <a href="#" class="media-left"><img src="{{ asset('images/demo/users/face1.jpg') }}"
                                                                        class="img-sm img-circle" alt=""></a>
                                    <div class="media-body">
                                        <a href="#" class="media-heading text-semibold">James Alexander</a>
                                        <span class="text-size-mini text-muted display-block">Santa Ana, CA.</span>
                                    </div>
                                    <div class="media-right media-middle">
                                        <span class="status-mark border-success"></span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /online-users -->

                </div>
            </div>
        </div>
        <!-- /detached sidebar -->


        <!-- Detached content -->
        <div class="container-detached">
            <div class="content-detached">

                <!-- Tab content -->
                <div class="tab-content">
                    <div class="tab-pane fade" id="apropos">
                        {{ render(controller('AppBundle:Recruteur:apropos')) }}
                    </div>

                    <div class="tab-pane fade" id="messages">
                        {{ render(controller('AppBundle:Recruteur:messages')) }}
                    </div>

                    <div class="tab-pane fade in active" id="settings">
                        {{ render(controller('AppBundle:Recruteur:setting')) }}
                    </div>
                </div>
                <!-- /tab content -->

            </div>
        </div>
        <!-- /detached content -->
    </div>
    <!-- /content area -->
{% endblock %}
