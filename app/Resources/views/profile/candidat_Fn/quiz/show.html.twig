{% extends 'base.html.twig' %}

{% block body %}
    <!-- Content area -->
    <div class="content">

        <!-- Wizard with validation -->
        <div class="panel panel-white">
            <div class="panel-heading">
                <h6 class="panel-title text-info text-bold text-uppercase">{{ quiz.titre }}</h6>
                <div class="heading-elements">
                    <ul class="icons-list">
                    </ul>
                </div>
            </div>

            <form class="steps-validation" action="#">
                {% for qz in question %}
                    <h6></h6>
                    <fieldset>
                        <h4>{{ qz.titre }}<span class="position-right text-danger">*</span>
                        </h4>
                        <div class="form-group">
                            {% for ch in qz.chnce %}
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="availability1" class="styled required">
                                        <code>&lt;{{ ch }}&gt;</code>
                                    </label>
                                </div>
                            {% endfor %}
                        </div>
                    </fieldset>
                {% endfor %}

            </form>
        </div>
        <!-- /wizard with validation -->

    </div>
    <!-- /content area -->
{% endblock %}