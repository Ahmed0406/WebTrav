{% for frm in formation %}
    <!-- formations -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h4 class="panel-title">
                <i class="icon-location4 position-left"></i>
                <a class="text-info" href="#">{{ frm.scolarite }}</a>
            </h4>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-action="collapse"></a></li>
                    <li><a data-action="close"></a></li>
                </ul>
            </div>
        </div>

        <div class="panel-body">
            <h6>{{ frm.diplome }}</h6>
            {% if frm.description != '' %}
                <div class="schedule">
                    <blockquote>
                        <p>{{ frm.description }}</p>
                    </blockquote>
                </div>
            {% endif %}
        </div>
    </div>
    <!-- /formations -->
{% endfor %}